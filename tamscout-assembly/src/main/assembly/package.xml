<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>tamscout</baseDirectory>
  <files>
    <file>
      <source>../LICENSE</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>../fichiers/tamscout.exe</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>../fichiers/tamscout.sh</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>../notes.txt</source>
      <outputDirectory>.</outputDirectory>
    </file>
    <file>
      <source>../tamscout-gui/target/tamscout.jar</source>
      <outputDirectory>./app</outputDirectory>
    </file>
  </files>
  <fileSets>
  <fileSet>
    <directory>../fichiers/conf</directory>
    <outputDirectory>./conf</outputDirectory>
  </fileSet>
  <fileSet>
    <directory>../fichiers/log</directory>
    <outputDirectory>./log</outputDirectory>
    <excludes>
        <exclude>*.*</exclude>
      </excludes>
  </fileSet>
  <fileSet>
    <directory>../fichiers/données</directory>
    <outputDirectory>./données</outputDirectory>
    <excludes>
        <exclude>*.*</exclude>
      </excludes>
  </fileSet>
</fileSets>
</assembly>
